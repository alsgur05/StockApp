<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="32dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="23dp"/>

        <LinearLayout
            android:id="@+id/pink_btn"
            android:layout_width="350dp"
            android:layout_height="124dp"
            android:background="@drawable/pink_gradation_btn"
            android:orientation="vertical"
            android:padding="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your total asset portfolio"
                android:textSize="16dp"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2.240.559"
                    android:textSize="32dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="13.32dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2%"
                    android:textColor="#ffffff"
                    android:textSize="10.67dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="3dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's to Buy?"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All â†’"
                android:textSize="18dp"
                android:textColor="#FE555D"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="170dp"
                    android:background="@drawable/black_gradation_btn"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/aapl_logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAPL\n$ 364.11"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="60dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="170dp"
                    android:background="@drawable/red_gradation_btn"
                    android:layout_marginRight="20dp"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mcd_logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MCD\n$ 183.11"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="60dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="170dp"
                    android:background="@drawable/blue_gradation_btn"
                    android:layout_marginRight="20dp"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fb_logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FB\n$ 233.42"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="60dp"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_listview_background"
        android:layout_marginTop="56dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Opinion"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#FF6BA1"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="Most Valuable Stocks 2020"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B2B2B2"
                    android:textSize="14dp"
                    android:text="This is how you set your foot for 2020\nStock market recession. What's next..."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profile_radius"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="39dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/avatar_image01"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4A4A4A"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>



</LinearLayout>







