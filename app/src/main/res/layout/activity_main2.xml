<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232C41"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Stocks"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="13dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="134dp"
                        android:layout_height="170dp"
                        android:background="@drawable/aapl_gradation_btn"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/aapl_logo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AAPL\n$ 364.11"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="60dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="197dp"
                        android:layout_height="170dp"
                        android:background="@drawable/mcd_gradation_btn"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/aapl_logo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MCD\n$ 183.11"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="60dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:background="@drawable/twtr_gradation_btn"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twtr_logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TWTR\n$ 30.87"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="195dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">

                    <LinearLayout
                        android:layout_width="131dp"
                        android:layout_height="140dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/nike_gradation_btn">



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="131dp"
                        android:layout_height="140dp"
                        android:background="@drawable/pypl_gradation_btn">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="154dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lyft_gradation_btn"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="140dp"
                    android:background="@drawable/nike_gradation_btn"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="197dp"
                    android:layout_height="140dp"
                    android:background="@drawable/fb_gradation_btn"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>